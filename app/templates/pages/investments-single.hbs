            feature-3-title="Проверенное качество"
            feature-3-text='Страхователем выступает СООО "Приорлайф", которое уже 19 лет успешно работает на рынке РБ'
            feature-3-icon="investments/single/feature_03"
    }}

    {{> blocks/common/card-overview no-padding=true gray=true big-left=true
            img="investments/single/overview_02" ext="png"
            img-tabletSmall="investments/single/overview_02-mobile"
