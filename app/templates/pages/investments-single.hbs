{{> hero/investments-single }}

<div class="js-tabs">
  {{> blocks/common/page-tabs tab-1="Страхование жизни и здоровья" tab-2="Страхование детей" tab-3="Страхование дополнительной пенсии"}}

  <div class="js-tab-content tab-1 active">
