{{#ifCond ext 'svg'}}
  <img src="../assets/images/{{img}}.{{ext}}" alt="{{alt}}"/>
{{else}}
  <picture>
    {{#if img-tablet}}
      {{#if ext-tablet}}
        {{> core/picture-source media="max-width: 1259px" img=img-tablet ext=ext-tablet}}
      {{else}}
        {{> core/picture-source media="max-width: 1259px" img=img-tablet ext=ext}}
      {{/if}}
    {{/if}}

    {{#if img-tabletSmall}}
      {{#if ext-tablet}}
        {{> core/picture-source media="max-width: 979px" img=img-tabletSmall ext=ext-tablet}}
      {{else}}
        {{> core/picture-source media="max-width: 979px" img=img-tabletSmall ext=ext}}
      {{/if}}
    {{/if}}

    {{#if img-mobile}}
      {{#if ext-mobile}}
        {{> core/picture-source media="max-width: 767px" img=img-mobile ext=ext-mobile}}
      {{else}}
        {{> core/picture-source media="max-width: 767px" img=img-mobile ext=ext}}
      {{/if}}
    {{/if}}

    {{> core/picture-source ext=ext}}

    {{#if no-lazy}}
      <img src="../assets/images/{{img}}.{{ext}}" alt="{{alt}}">
    {{else}}
      {{#if video}}
        <img src="../assets/images/{{img}}.{{ext}}" alt="{{alt}}">
      {{else}}
        <img class="lazy"
             data-sizes="auto"
             data-original="../assets/images/{{img}}.{{ext}}"
             src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
             alt="{{alt}}">
      {{/if}}
    {{/if}}
  </picture>
{{/ifCond}}
