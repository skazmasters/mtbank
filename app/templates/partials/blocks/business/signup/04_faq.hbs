                    {{> blocks/common/faq-answer }}
                  {{/blocks/common/accordion-item}}
                </li>
                <li class="faq__item">
                  {{#>blocks/common/accordion-item title="Может ли директор ООО вести Бухгалтерский учет?" }}
                    {{> blocks/common/faq-answer }}
                  {{/blocks/common/accordion-item}}
