<section class="section js-tabs-slider">
  <div class="container">
    <div class="section__header section__header--tabs">
      <span class="section__title">Рекомендуемые продукты</span>

      <div class="section-tabs">
        <div class="section-tabs__inner">
          <button class="section-tabs__item active js-tabs-slider__tab" data-filter="filter-1">Всем</button>
          <button class="section-tabs__item js-tabs-slider__tab" data-filter="filter-2">Зарплатным клиентам</button>
          <button class="section-tabs__item js-tabs-slider__tab" data-filter="filter-3">Новым клиентам</button>
        </div>
      </div>

      <div class="section__header-right">
        {{> components/slider-nav small=true}}
      </div>
    </div>

    <div class="section__content">
      <div class="tabs-slider__container">
        <div class="tabs-slider__slider swiper-container js-tabs-slider__slider">
          <div class="tabs-slider__slides swiper-wrapper">
            {{#each home.recommended.content.all}}
              <div class="swiper-slide tabs-slider__slide js-tabs-slider__slide" data-filter="{{this.filter}}">
                {{> widgets/product-card href=this.href title=this.title text=this.text img=(concat 'home/recommended/' this.image) button-label=this.label}}
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
