              {{#>blocks/common/accordion-item title="Оплата в интернете" }}
                {{> blocks/services/apple-pay-faq/faq-item}}
              {{/blocks/common/accordion-item}}
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
