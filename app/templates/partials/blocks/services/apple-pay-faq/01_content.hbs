<section class="section">
  <div class="container-880">
    <div class="faq">
      <div class="faq__section">
        <div class="faq__header">
          <span class="faq__title">Условия</span>
        </div>
        <div class="faq__content">
          <ul class="faq__list js-accordion">
            <li class="faq__item">
              {{#>blocks/common/accordion-item title="Список устройств, которые поддерживает Apple Pay"}}
