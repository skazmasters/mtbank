<section class="section">
  <div class="container">
    <div class="js-carousel-slider" data-slides-count="3">
      <header class="section__header">
        <h2 class="section__title">Специальные предложения</h2>
        <div class="section__header-right">
          {{> components/slider-nav small=true}}
        </div>
      </header>
      <div class="section__content">
        <div class="carousel-slider carousel-slider--3">
          <div class="swiper-container carousel-slider__inner js-carousel-slider__slider">
            <div class="swiper-wrapper">
              {{#times 2}}
                <div class="swiper-slide carousel-slider__slide">
                  {{> widgets/product-card img="salary/offer_01" ext="png" title="Кредит" text="До 50 000 на срок от 1 года до 5 лет"}}
                </div>
                <div class="swiper-slide carousel-slider__slide">
                  {{> widgets/product-card img="salary/offer_02" ext="png" title="Депозит" text="Вклады до 13% на срок в 1 год"}}
                </div>
                <div class="swiper-slide carousel-slider__slide">
                  {{> widgets/product-card img="salary/offer_03" ext="png" title="Страхование" text="Страхование несчастных случаев "}}
                </div>
              {{/times}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
