<section class="section section--no-mt">
  <div class="js-tabs">
    <div class="card-tabs">
      <div class="container">
        <div class="card-tabs__wrapper">
          <div class="card-tabs__row">
            {{# times 2}}
            <div class="card-tabs__cell">
