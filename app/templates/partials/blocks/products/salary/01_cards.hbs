              <button class="card-tabs__item js-tab" data-target=".tab-card-05">
                <div class="card-tabs__item-image">
                  {{> components/image img="salary/tab_05" ext="png"}}
                </div>
                <span class="card-tabs__item-name">Infinite</span>
                <span class="card-tabs__item-text">Мир эксклюзивности</span>
              </button>
            </div>
            {{/times}}
          </div>
        </div>
      </div>
    </div>

