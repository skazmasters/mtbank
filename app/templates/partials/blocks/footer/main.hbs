<div class="footer-main">
  <div class="container">
    <div class="footer-main__top">
      <div class="footer-main__left">
        <div class="footer-main__logo">
          {{#if no-clickable-logo}}
            {{>ui/svg name="logo--white"}}
          {{else}}
            <a href="#">
              {{>ui/svg name="logo--white"}}
            </a>
          {{/if}}
        </div>
      </div>
      <div class="footer-main__right">
        <div class="footer-main__contacts">
          <div class="footer-main__phones">
            {{> blocks/footer/phones}}
          </div>
          <div class="footer-main__actions">
            <div class="footer-main__bank">
              {{> components/button-bank white=true}}
            </div>
            <div class="footer-main__buttons">
              {{> blocks/footer/buttons}}
            </div>
          </div>
        </div>
        <div class="footer-main__nav">
          {{> blocks/footer/nav}}
        </div>
      </div>
    </div>
    <div class="footer-main__bottom">
      <div class="footer-main__left">
        {{> blocks/footer/socials}}
      </div>
      <div class="footer-main__right">
        {{> blocks/footer/actions}}
      </div>
    </div>
  </div>
</div>
