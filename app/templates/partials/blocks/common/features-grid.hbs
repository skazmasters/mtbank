<section class="section">
  <div class="container">
    <header class="section__header">
      <h2 class="section__title">{{title}}</h2>
    </header>
    <div class="section__content">
      <div class="grid-three {{#if small}}grid-three--small{{/if}}">
        <div class="grid-three__cell">
          {{>widgets/offer-card
                  image=(concat assets-folder "/feature_01")
                  title=title-1
                  text=text-1
          }}
        </div>
        <div class="grid-three__cell">
          {{>widgets/offer-card
                  image=(concat assets-folder "/feature_02")
                  title=title-2
                  text=text-2
          }}
        </div>
        <div class="grid-three__cell">
          {{>widgets/offer-card
                  image=(concat assets-folder "/feature_03")
                  title=title-3
                  text=text-3
          }}
        </div>
        <div class="grid-three__cell">
          {{>widgets/offer-card
                  image=(concat assets-folder "/feature_04")
                  title=title-4
                  text=text-4
          }}
        </div>
        <div class="grid-three__cell">
          {{>widgets/offer-card
                  image=(concat assets-folder "/feature_05")
                  title=title-5
                  text=text-5
          }}
        </div>
        <div class="grid-three__cell">
          {{>widgets/offer-card
                  image=(concat assets-folder "/feature_06")
                  title=title-6
                  text=text-6
          }}
        </div>
      </div>
      {{#if button-label}}
        <div class="grid-button">
          {{> ui/btn color="primary" size="large" label=button-label}}
        </div>
      {{/if}}
    </div>
  </div>
</section>
