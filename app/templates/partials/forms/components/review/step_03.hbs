<div class="account-form account-form--review">
  <div class="account-form__header">
    <span class="account-form__title">Уточните пожалуйста</span>
  </div>
  <div class="account-form__main">
    <div class="account-form__check">
      {{> form/checkbox-row label="Внешний вид сотрудников"}}
    </div>
    <div class="account-form__check">
      {{> form/checkbox-row label="Офис снаружи. (зона возле РКЦ,зона 24/7)"}}
    </div>
    <div class="account-form__check">
      {{> form/checkbox-row label="Офис изнутри. (порядок,клиентская зона)"}}
    </div>
    <div class="account-form__check">
      {{> form/checkbox-row label="Режим работы"}}
    </div>
  </div>
  <div class="account-form__submit">
    <div class="account-form__submit-left">
      {{> widgets/button-arrow label="Назад"}}
    </div>
    <div class="account-form__submit-right">
      {{>ui/btn button=true type="submit" size="large" label="Продолжить" color="primary" arrow=true}}
    </div>
  </div>
</div>
